<% if signed_in? %>
	<h3>Add a review:</h3>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		<div class="row">	
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :body, "Comments" %><br>
					<%= f.text_area :body, class: "form-control" %>
					<div class="rating"></div><br>
					<div><%= f.submit "Submit" %></div>
				</div>	
			</div>			
		</div>
	<% end %>
<% end %>