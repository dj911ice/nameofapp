    <%= f.label :description %>
    <%= f.text_area(:description, cols:35, rows:8) %>
    <br><br>
    <%= f.label :image_url %>
    <%= f.text_field(:image_url, size:36) %>
    <br><br>
    <%= f.label :colour %>
    <%= f.text_field(:colour, size:36) %>
    <br><br>
    <%= f.label :price %>
