<div class="container">
<br><br>
<h1><%= @product.name %></h1>
<br>
	<div class="row">		
		<div class="col-sm-4 col-md-6">
			<div class="product-show">
			<%= image_tag(@product.image_url, class: "img-show") %>
			<p><%= render partial: 'products/new_comment' %></p>
			</div>
		</div>
	<div class="col-sm-4 col-md-6">			
			<p class="description">
  		<%= @product.description %>
  		</p>
  		<p class="price price-show"> Our Price: <%= @product.price %> CHF</p> 	
  		<p class="rated" data-score="<%= @product.average_rating %>">Average Rating: 
  		</br>
  		</p>
	</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4 col-md-6">
			
		</div>
		<div class="col-sm-4 col-md-6">
			<div class="apple_pagination">	
				<%= will_paginate @comments %>
			</div>
		</div>
	</div>	
	<%= render partial: 'products/comments' %>
	<% @product.highest_rating_comment %>
</div>
